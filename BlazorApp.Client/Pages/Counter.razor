@page "/counter"
@rendermode InteractiveWebAssembly
@inject IToastService ToastService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: <FluentBadge Appearance="Appearance.Neutral">@currentCount</FluentBadge></p>

<FluentButton Appearance="Appearance.Accent" @onclick="IncrementCount">Click me</FluentButton>
<FluentToastProvider MaxToastCount="3" @rendermode="InteractiveWebAssembly" />

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        ToastService.ShowInfo($"Current count is {currentCount}");
    }
}